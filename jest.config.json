{
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest"]
  },
  "testEnvironment": "node",
  "testRegex": "(/tests/plugins/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/tests/hcs10/",
    "/tests/tools/"
  ]
}
