{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*", "examples/**/*", "tests/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
